<div class="container">
<div class="row">
  <div class="col-md-12">

    <div class="featured-boxes">
      <div class="row">
        <div class="col-sm-6">
          <h1>Bill Tracker Dashboard</h1>
          <div class="featured-box featured-box-primary align-left mt-xlg">
            <div class="box-content">
              <h4 class="heading-primary text-uppercase mb-md">Subscribe to a Bill</h4>
              <%= form_for(@bill, url: subscribe_path, id: "frmSignIn") do |f| %>
                <% unless f.object.errors.empty? %>
                  <h2>Errors</h2>
                  <ul>
                    <% f.object.errors.full_messages.each do |error| %>
                      <li><%= error %></li>
                    <% end %>
                  </ul>
                <% end %>
                <p>To subscribe to a bill, please enter it in the following format:</p>
                <ul>
                  <li>HB for House Bill, SB for Senate Bill, HJR for House Joint Resolution, etc.</li>
                  <li>Followed by the Bill's number.</li>
                  <li>So, House Bill 1001 would be HB1001</li>
                </ul>

                <div class="row">
                  <div class="form-group">
                    <div class="col-md-12">
                      <%= f.label :name, "Bill Name"%>
                      <%= f.text_field :name, class: "form-control input-lg" %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                  </div>
                  <div class="col-md-6">
                    <%= f.submit "Subscribe", class: "btn btn-primary pull-right mb-xl" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
        
        


<br>
<p>Your current subscriptions:</p>
<ul>
  <% @bills.each do |bill| %>
    <li><%= bill.name %>
    <li>most recent action:</li>
    <ul>
      <li><%= bill.description[-4] %></li>
      <li><%= bill.description[-2] %></li>
    </ul>
    <%= button_to "Unsubscribe", { action: "delete", id: bill.id },
                                                       method: :delete, data: { confirm: "Are you sure?" } %></li>
    <br>
  <% end %>
</ul>

<%= will_paginate @bills %>
